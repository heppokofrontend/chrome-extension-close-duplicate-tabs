{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.2.2",
  "description": "__MSG_extDesc__",
  "action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts.js"]
    }
  ],
  "background": {
    "service_worker": "worker.js"
  },
  "permissions": ["tabs", "windows", "storage"],
  "icons": {
    "128": "images/icon.png"
  },
  "default_locale": "en"
}
